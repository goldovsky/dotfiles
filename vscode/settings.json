{
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.layoutControl.type": "both",
    // "workbench.statusBar.visible": false,
    "workbench.sideBar.location": "right",
    "workbench.tree.indent": 15,

    "editor.minimap.enabled": false,
    "editor.fontFamily": "ZedMono Nerd Font", // Iosevka Nerd Font, ZedMono Nerd Font
    "editor.fontSize": 14,
    "editor.wordWrap": "on",
    "editor.padding.top": 8,
    "editor.cursorBlinking": "solid",
    "editor.stickyScroll.enabled": true,
    "editor.guides.indentation": true,
    // "editor.formatOnSave": true,
    "editor.hover.enabled": true,
    "editor.hover.delay": 300,
    "editor.hover.above": true,
    "editor.matchBrackets": "always",
    "editor.lightbulb.enabled": "on",
    "editor.accessibilitySupport": "off",
    "editor.renderLineHighlight": "gutter",
    "editor.suggestFontSize": 16,
    "editor.suggestLineHeight": 30,
    "editor.linkedEditing": true,
    "editor.wordWrapColumn": 120,
    "breadcrumbs.icons": true,
    "breadcrumbs.filePath": "on",
    
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    
    "window.title": "${rootName}",
    "window.zoomLevel": 0.5,
    
    "terminal.integrated.fontFamily": "ZedMono Nerd Font",
    
    "javascript.validate.enable": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    
    "svg.preview.mode": "img",
    "diffEditor.ignoreTrimWhitespace": false,
    "git.decorations.enabled": true,
    "git.openRepositoryInParentFolders": "never",
    "gitlens.launchpad.indicator.enabled": false,
    "markiscodecoverage.searchCriteria": ".coverage/lcov*.info",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "editor.scrollbar.verticalScrollbarSize": 7,
    "files.associations": {
        "*.hlx": "json"
    },

    // "editor.tokenColorCustomizations": {
    //     "textMateRules": [
    //         {
    //             "scope": [
    //                 "comment",
    //                 "keyword",
    //                 "variable.language",
    //                 "entity.other.attribute-name.html",
    //                 "entity.other.attribute-name",
    //                 "keyword.control",
    //                 "storage.type",
    //                 "comment",
    //                 "comment.block",
    //                 "comment.line"
    //             ],
    //             "settings": {
    //                 "fontStyle": "italic "
    //             }
    //         }
    //     ]
    // },

    "terminal.integrated.confirmOnExit": true,

    /**
    * LATEX
    */
    "latex-workshop.latex.tools": [
    {
        "name": "xelatex",
        "command": "xelatex",
        "args": [
            "-synctex=1",
            "-interaction=nonstopmode",
            "-file-line-error",
            "%DOC%"
        ]
    }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "XeLaTeX",
            "tools": ["xelatex"]
        }
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux", "*.bbl", "*.blg", "*.idx", "*.ind", "*.lof", "*.lot", 
        "*.out", "*.toc", "*.acn", "*.acr", "*.alg", "*.glg", "*.glo", 
        "*.gls", "*.fls", "*.log", "*.fdb_latexmk", "*.snm", "*.nav"
    ],
    "continue.showInlineTip": false,
    "github.copilot.nextEditSuggestions.enabled": true,
    "zenMode.showTabs": "none",
    "zenMode.hideLineNumbers": false,
    "zenMode.centerLayout": false,
    "window.commandCenter": false,
    "workbench.iconTheme": "material-icon-theme",
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "github.copilot.chat.codeGeneration.useInstructionFiles": false,
    "workbench.layoutControl.enabled": false
}
